{
	"compilerOptions": {
	  	"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"skipLibCheck": true,
		"emitDeclarationOnly": true,
		"composite": true,
	},
	"references": [
		{
		  "path": "@app/client"
		},
		{
		  "path": "packages/ui-lib"
		}
	  ]
  }